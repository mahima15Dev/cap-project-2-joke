<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>joke website</title>
    <Link href="/style.css" rel="stylesheet">
</head>
<body>
    <div class="container">
    <header>
        <h1>Joke Website</h1>
    </header>
    <main>
        <div class="joke-container">
            <% if (joke) {%>
                <p class="joke"><%= joke %></p>
            <% } else {%>
                <p class="error">No jokes available</p>
            <% }  %>

        </div>
        <button id="get-joke-button">Get joke</button>
    </main>
    </div>
    <script>
        const getJokeButton = document.getElementById("get-joke-button");
        getJokeButton.addEventListener("click", async () => {
            try {
                const response = await fetch("/getJoke");
                const data = await response.json();

                const jokeContainer = document.querySelector(".joke-container");
                if (data.joke) {
                    jokeContainer.innerHTML = `<p class="joke">${data.joke}</p>`;
                } else {
                    jokeContainer.innerHTML = `<p class="error">No jokes available</p>`;
                }
            } catch (error) {
                console.error("Error fetching joke:", error);
            }
        });
    </script>    
</body>
</html>